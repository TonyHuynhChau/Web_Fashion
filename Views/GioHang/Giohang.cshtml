@using Fashion.Models
@model List<GioHang>


@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Layout/Fashion.cshtml";
}



@section GioHang{
    <link href="~/Content/GioHang.css" rel="stylesheet">
    <link href="~/Content/shop-homepage.css" rel="stylesheet">
    <style>
        *{
            padding: 0;
            margin: 0;
        }

        .content-giohang {
            width: 100%;
            margin-top: 70px;
            padding-left: 10%;
            font-size: 16px;
        }


        table {
            width: 85%;
            box-shadow: 0px 15px 25px 5px rgb(0 0 0 / 25%);
            border: 0.5px;
            border-radius: 15px;
        }

        td {
            padding: 10px;
            border: solid;
        }

        tr {
            background: linear-gradient(to right, #3a7bd5, #3a6873);
        }

            tr btn {
                margin: 10px 10px;
            }
        media (max-width: 1024px) {
            content-giohang{
                margin-top: 70px;
                font-size: 12px;
            }
        }
}


    </style>

    <div class="content-giohang">
        <table align="center" border="1">
            <tr style="text-align: center; font-weight: bold;">
                <td>Mã Sản Phẩm</td>
                <td>Tên Sản Phẩm</td>
                <td>Ảnh</td>
                <td>Số Lượng</td>
                <td>Đơn Giá</td>
                <td>Thành Tiền</td>
                <td></td>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="text-align:center; font-weight:bold">
                    <td>@item.masp</td>
                    <td>@item.tensp</td>
                    <td><img src="~/Sản Phẩm/@item.anhbia" alt="Alternate Text" /></td>
                    @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @id = item.masp }))
                    {
                        <td><input type="number" min="1" name="Soluong" value="@item.soluong" style="width:50px" /></td>
                        <td>@String.Format("{0:0,0 }", @item.dongia)</td>
                        <td>@String.Format("{0:0,0 }", @item.thanhtien)</td>
                        <td><a class="btn btn-danger" href="@Url.Action("XoaGioHang","GioHang", new {id = @item.masp})">Xóa</a></td>

                    }

                </tr>
            }
            <tr style="text-align:center; font-weight:bold;">
                <td colspan="4">Số Lượng : @ViewBag.TongSoLuong</td>
                <td colspan="5">Tổng Tiền : @String.Format("{0:0,0 }", ViewBag.TongTien) VNĐ</td>
            </tr>
            <tr style="text-align:right; font-weight:bold;">

                <td colspan="9">
                    <a style=" background-color:aquamarine" href="@Url.Action("DatHang","GioHang")" class="btn btn-default">Đặt Hàng</a>
                    <a class="btn btn-warning" href="@Url.Action("RemoveAll","GioHang")">Xóa Tất Cả</a>
                </td>

            </tr>

        </table>
    </div>

    }

