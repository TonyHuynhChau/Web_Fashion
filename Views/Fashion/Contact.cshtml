
@{ ViewBag.Title = "Contact";
                Layout = "~/Views/Layout/Contact/_LayoutContact.cshtml"; }
<style>
    .fa {
        text-align: center;
        font-size: 3em;
        letter-spacing: 8px;
        font-weight: 500;
        font-family: 'Dosis', sans-serif;
        text-transform: uppercase;
        text-shadow: 5px 3px 5px #101010;
